// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Pokemon {
  id        Int      @id 
  name String
  types  String[]  
  description String
  height Int
  weight Int
  genderRatio Int
  abilities     String[] 
  eggGroups     String[] 
  evolutions Json
  image String
  teamId    Int?  
  team      Team?    @relation(fields: [teamId], references: [id]) 
}

model Team {
  id        Int      @id @default(autoincrement())
  name      String
  pokemons  Pokemon[] 
}
model Types {
  id Int @id @default(autoincrement())
  name String
   
}
model Egg_groups {
  id Int @id @default(autoincrement())
  name String
  
}

model Images {
   id Int @id @default(autoincrement())
  url String
}

model Abilities{
    id Int @id @default(autoincrement())
  name String
 
}