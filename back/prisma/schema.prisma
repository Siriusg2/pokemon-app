// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Pokemon {
  id        Int      @id @default(autoincrement())
  types String[]
  description String
  height Int
  weight Int
  genderRatio Int
  abilities String[]
  eggGropus String[]
  evolutions String
  teamId    Int?  
  team      Team?    @relation(fields: [teamId], references: [id]) 
}

model Team {
  id        Int      @id @default(autoincrement())
  name      String
  pokemons  Pokemon[] 
}
